{
  "name": "iconfont",
  "displayName": "iconfont",
  "description": "iconfont管理",
  "version": "0.0.6",
  "publisher": "yoyo612",
  "engines": {
    "vscode": "^1.41.0"
  },
  "repository": {
    "url": "https://github.com/purely-smile/vscode-iconfont",
    "type": "github"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:iconfontList",
    "onCommand:iconfont.setProject",
    "onLanguage:vue",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:css",
    "onLanguage:html"
  ],
  "main": "./out/extension",
  "icon": "media/icon.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iconfont",
          "title": "管理iconfont",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "iconfont": [
        {
          "id": "iconfontList",
          "name": "iconfont列表"
        }
      ]
    },
    "commands": [
      {
        "command": "iconfont.refreshEntry",
        "title": "刷新",
        "icon": "media/refresh.svg"
      },
      {
        "command": "iconfont.copy.fontClass",
        "title": "复制",
        "icon": "media/copy.svg"
      },
      {
        "command": "iconfont.setProject",
        "title": "set iconfont projectId"
      },
      {
        "command": "iconfont.copy.show_svg",
        "title": "复制svg"
      },
      {
        "command": "iconfont.show.svg",
        "title": "查看svg",
        "icon": "media/show.svg"
      },
      {
        "command": "iconfont.copy.unicode",
        "title": "复制unicode"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "iconfont.refreshEntry",
          "when": "view == iconfontList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "iconfont.copy.fontClass",
          "when": "view == iconfontList && viewItem == icon",
          "group": "inline"
        },
        {
          "command": "iconfont.show.svg",
          "when": "view == iconfontList",
          "group": "inline"
        },
        {
          "command": "iconfont.copy.show_svg",
          "when": "view == iconfontList"
        },
        {
          "command": "iconfont.copy.unicode",
          "when": "view == iconfontList"
        }
      ]
    },
    "configuration": {
      "title": "iconfont",
      "properties": {
        "iconfont.projectId": {
          "type": "string",
          "default": "",
          "description": "请输入iconfont project id"
        },
        "iconfont.highlight.bgColor": {
          "type": "string",
          "default": "#FFCCCC",
          "description": "iconfont 高亮背景色"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc  -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "tslint": "^5.8.0",
    "typescript": "^3.7.4",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "del": "^5.1.0"
  }
}
